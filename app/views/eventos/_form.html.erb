<%= simple_form_for(@evento, form_html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :evento_tipo %>
    <%= f.input :inicio %>
    <%= f.input :fim %>
    <%= f.input :dia_semana %>
    <%= f.input :descricao %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
